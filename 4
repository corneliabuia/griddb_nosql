sir = input("Introduceti numerele separate prin spatii: ")
numere = sir.split()
ratia = int(numere[1]) - int(numere[0])
corectTimes = 1
for i in range(numere.__len__() - 1):
    if int(numere[i+1]) - int(numere[i]) != ratia:
        print("Nu e progresie aritmetica")
        break
    else:
        corectTimes = corectTimes + 1

if corectTimes == numere.__len__():
    print("Sirul dat este progresie aritmetica")
