raza_cerc = input('Introduceti  numÄƒrul real pozitiv, raza cercului:')
numar_perechi = input('Introduceti un numar natural nenul:')
i = 0
if raza_cerc <= 0:
    print("Numarul trebuie sa fie real pozitiv")
if numar_perechi <= 0:
    print("Numarul trebuie sa fie natural nenul")
for i in range(int(numar_perechi)):
    latura = float(raza_cerc) * 1.41
    print("(" + str(raza_cerc) + ", " + str(latura) + ")")
    raza_cerc = latura/2
